def GIR_REPO_URL = 'https://github.com/oprokipchuk/backend-sandbox'

pipeline {
    agent {
        //dockerContainer(image: 'maven:3.9.4')
        docker {
            image 'maven:3.9.4'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], userRemoteConfigs: [[url: GIR_REPO_URL]]])
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
    }

    post {
        success {
            echo 'Build successful!'
        }

        failure {
            echo 'Build failed!'
        }
    }
}
